<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcomes"
    tools:context=".Menu">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageButton
            android:id="@+id/yootubeButton"
            android:layout_width="363dp"
            android:layout_height="400dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#4DFFFFFF"
            app:srcCompat="@drawable/onlinevideos" />
        <TextView
            android:id="@+id/textViewYootube"
            android:layout_width="363dp"
            android:layout_height="85dp"
            android:backgroundTint="#4DFFFFFF"
            android:text="Yootube Notes"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="36sp" />

        <ImageButton
            android:id="@+id/facebook"
            android:layout_width="363dp"
            android:layout_height="400dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#4DFFFFFF"
            app:srcCompat="@drawable/message_sent" />

        <TextView
            android:id="@+id/textViewFacebook"
            android:layout_width="363dp"
            android:layout_height="85dp"
            android:backgroundTint="#4DFFFFFF"
            android:text="Facebook Notes"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="36sp" />

        <ImageButton
            android:id="@+id/instagram"
            android:layout_width="363dp"
            android:layout_height="400dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="#4DFFFFFF"
            app:srcCompat="@drawable/product_photography" />
        <TextView
            android:id="@+id/textViewInsta"
            android:layout_width="363dp"
            android:layout_height="85dp"
            android:backgroundTint="#4DFFFFFF"
            android:text="Instagram Notes"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="36sp" />
    </LinearLayout>
</ScrollView>