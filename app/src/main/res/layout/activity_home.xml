<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcomes"
    tools:context=".Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0dp"
            android:background="#00FFFFFF"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/menu_logo" />

        <ImageButton
            android:id="@+id/project"
            android:layout_width="363dp"
            android:layout_height="400dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#45FFFFFF"
            android:tint="#00FFFFFF"
            app:srcCompat="@drawable/creative_team" />

       <TextView
             android:id="@+id/textView"
            android:layout_width="363dp"
            android:layout_height="73dp"
            android:text="Projet"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="50sp" />

        <ImageButton
            android:id="@+id/devco"
            android:layout_width="363dp"
            android:layout_height="400dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#2FFFFFFF"
            android:tint="#FFFFFF"
            app:srcCompat="@drawable/businessman" />

        <TextView
            android:id="@+id/textViewdev"
            android:layout_width="363dp"
            android:layout_height="85dp"
            android:text="Developement Commercial"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="36sp" />

        <ImageButton
            android:id="@+id/marketing"
            android:layout_width="363dp"
            android:layout_height="400dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="#1BFFFFFF"
            app:srcCompat="@drawable/cameramark" />

        <TextView
            android:id="@+id/textViewmark"
            android:layout_width="363dp"
            android:layout_height="73dp"
            android:text="Marketing"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="50sp" />
    </LinearLayout>

</ScrollView>